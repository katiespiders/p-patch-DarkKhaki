<!DOCTYPE html>
<html>
<head>
  <title>Bpatch</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header>
      <span id='weather'> <%= image_tag weather_icon %> Right now: <%= conditions %>, <%= temperature %>&deg; F</span>

      <%= link_to "About", root_path %> |
      <%= link_to "Articles", articles_path %> |
      <%= link_to "Library", library_path %> |
      <%= link_to "Calendar", calendar_path %> |
    <% if current_user %>
      <%= link_to "Account", current_user %> |
      <%= link_to "Sign Out", session_path, method: :delete %>
    <% else %>
      <%= link_to "Sign In", sessions_path %> |
      <%= link_to "Sign Up", create_user_path %>
    <% end %>


  </header>
  <!-- flash message provided by rails-->
  <!-- <div class="flash">
    <% flash.each do |name, msg| %>
    <%= content_tag :div, msg, id: "flash_#{name}" %>
    <% end %>
  </div> -->
  <div class= "container">
    <%= flash[:notice] %>
    <%= yield %>
  </div>

</body>
</html>
