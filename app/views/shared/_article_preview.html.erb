<tr>
  <td><%= image_tag article.pic, class: "thumbnail" %></td>
  <td>
    <%= link_to article.title, article_path(article.id) %> <small><%= article.byline %>
    <%= link_to "Edit", edit_article_path(article.id) if admin? %>
    <%= link_to "Delete", article_path(article.id), method: :delete if admin?%> </small><p><%= article.content[0..500] %> ...</td>
  <td><%= article.comments.count %> comments</td>
</tr>
